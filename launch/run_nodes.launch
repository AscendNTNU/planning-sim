<launch>
    <arg name="param_file" default="default_config.yaml"/>
    <node name="planning" pkg="planning_ros_sim" type="planning" output="screen">
        <rosparam file="$(find planning_ros_sim)/$(arg param_file)" command="load"/>
    </node>
    <node name="fuser" pkg="planning_ros_sim" type="fuser"/>
    <node name="visualizer" pkg="planning_ros_sim" type="visualizer"/>
    <node name="perception_control" pkg="planning_ros_sim" type="perception_control">
        <rosparam file="$(find planning_ros_sim)/$(arg param_file)" command="load"/>
    </node>
</launch>
